@page "/CreateAccountDetails"
@layout LoginCreateAccountLayout
@inherits CreateAccountDetailsRazor

		<div class="container-login">
			<div class="wrap-login">
				
				<span class="login-title">
					<b>Create Account</b>
				</span>
				
				<div class="createAccount">
					<div class="wrap-input">
						<span class="label-input">Firstname</span>
						<input class="input" type="text" placeholder="Type your firstname">
						<span class="focus-input"></span>
					</div>		
					<div class="wrap-input">
						<span class="label-input">Lastname</span>
						<input class="input" type="text" placeholder="Type your lastname">
						<span class="focus-input"></span>
					</div>					
					<div class="wrap-input">
						<span class="label-input">Age</span>
						<input class="input" type="text" placeholder="Type your age">
						<span class="focus-input"></span>
					</div>					
					<div class="wrap-input">
						<span class="label-input">Sex</span>
						<input class="input" type="text" placeholder="Type your sex">
						<span class="focus-input"></span>
					</div>
					<div class="wrap-input">
						<span class="label-input">Family status</span>
						<input class="input" type="text" placeholder="Type your family status">
						<span class="focus-input"></span>
					</div>
				</div>
				
				<div class="createAccount">
					<div class="wrap-input">
						<span class="label-input">Average income</span>
						<input class="input" type="text" placeholder="Type your average income">
						<span class="focus-input"></span>
					</div>					
					<div class="wrap-input">
						<span class="label-input">Address</span>
						<input class="input" type="text" placeholder="Type your address">
						<span class="focus-input"></span>
					</div>
					<div class="wrap-input">
						<span class="label-input">Zip code</span>
						<input class="input" type="text" placeholder="Type your address">
						<span class="focus-input"></span>
					</div>						
					<div class="wrap-input">
						<span class="label-input">Job title</span>
						<input class="input" type="text" placeholder="Type your job title">
						<span class="focus-input"></span>
					</div>
						<div class="wrap-input">
							<span class="label-input">ID</span>
							<input class="input" type="text" placeholder="Type your ID">
							<span class="focus-input"></span>
						</div>
				</div>

				<div class="wrap-login-btn">
					<div class="login-bgbtn"></div>
					<button @onclick="LoadViewAnimals" class="login-btn">
						Create Account
					</button>
				</div>
				
				<div class="wrap-SignUp">	
					<a @onclick="LoadLogIn" class="signUp" href="#">LogIn</a>
				</div>

			</div>
		</div>

	