@page "/ViewAnimals"
@inherits ViewAnimalsRazor
<h3>ViewAnimals</h3>

<table>
    <tr>
        @*<th>Id</th>*@
        <th>Age</th>
        <th>Type of animal</th>
        <th>Descripition</th>
    </tr>
    @if (Animals != null)
    {
        @foreach (var animal in Animals)
        {
            <tr>
                @* <td>@animal.Id</td> *@
                <td>@animal.Age</td>
                <td>@animal.AnimalType</td>
                <td>@animal.Description</td>
            </tr>
        }
    }


    
</table>