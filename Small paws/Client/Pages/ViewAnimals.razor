@page "/ViewAnimals"
@using Client.Model
@inherits ViewAnimalsRazor

<AuthorizeView Policy="MustBePetOwner">
    <div class="card-deck">
        <div class="card-deck">

            @if (Animals != null)
            {
                @foreach (var animal in Animals)
                {
                    
                    <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;" @onclick="() => OpenSpecificAnimal(animal.Id)">
                        <img class="card-img-top imageThumbnail" src="@ShownImage[animal.Id]" alt="image thumbnail"/>

                        <tr>
                            <th><b>@animal.AnimalType</b></th>
                        </tr>
                        <tr id="ageRow">
                            <td >@animal.Age years old</td>
                        </tr>
                        <tr><td><b>Description:</b></td></tr>
                        <tr>
                            <td id="description">@ShownDescription[@animal.Id]</td>
                        </tr>
                    </div>
                }
            }else
                         {
                             <p>
                                 <em> No animals to show</em>
                             </p>
                         }
        </div>
    </div>
</AuthorizeView>

